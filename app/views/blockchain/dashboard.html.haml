.jumbotron{:style => "background-image: url(#{image_url 'register_background.jpg'})"}
	.container
		.row.flex-row
			.col-sm-6.col-sm-offset-3
				.slider-box-appointment
					.header
						%h3.font-2.text-center= "Witaj #{@user.email}"
					%hr.hr-2/
					.body

						.br
						- if @wallet
							= 'Limit'
							= @user.wallet.limit
							.br
							= "Adres portfela"
							= @user.wallet.network_address || "Nie uzupe≈Çniono"
							.br
							= "Kod rybki"
							= @user.wallet.code

						.br
						= link_to 'Edytuj', edit_user_registration_path
						= link_to "Cofnij", root_path